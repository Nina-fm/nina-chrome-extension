{
  "manifest_version": 2,

  "name": "Nina.fm",
  "description": "This extension allows the user to listen Nina.fm during the web browsing.",
  "version": "0.2",

  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": "img/equalizer/stepoff.png",
    "default_title": "Nina.fm"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
